<!DOCTYPE html>
<html>
<head>
  <title>ClassPassBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>

<div id='navigation-bar'>
  <ul>
    <li class='logo'>CLASSPASS REVIEWS</li>
    <li class='logo'><%= link_to "Studios", studios_path %></li>
    <li class='logo'><%= link_to "Reviews", posts_path %></li>
    <% if !logged_in? %>
      <div id='signin'>
        <li><%= link_to "Register", register_path %></li>
        <li><%= link_to "Log In", login_path %></li>
      </div>
    <% else%>
    <div id='signout'>
      <li> Hey <%= current_user.username %>!</li>
      <li><%= link_to "Profile", user_path(current_user) %> </li>
      <li><%= link_to "Write a review", new_post_path %></li>
      <li><%= link_to "Add a studio", new_studio_path %></li>
      <li><%= link_to "Log out", logout_path, method: :delete %><li>
    </div>
    <% end%>
  </ul>
</div>

<div id='error'>
  <% if @error %>
    <%= @error %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
