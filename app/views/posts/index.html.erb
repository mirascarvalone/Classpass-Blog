<% if logged_in? %>
  <h1>Hi <%= current_user.username %> </h1>
  <%= link_to "Log out", logout_path, method: :delete %>
<% else %>
  <%= link_to "Register", register_path %>
  <%= link_to "Log In", login_path %>
<% end %>

<hr></hr>

<h1>Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= post.content %></td>
      <% if logged_in? %>
        <td><%= link_to 'Edit Post', edit_post_path(post) %></td>
        <td><%= link_to 'Delete Post', post_path(post),
            method: :delete,
            data: {confirm: 'Are you sure you want to delete this post?'} %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if logged_in? %>
  <%= link_to 'Create a Post', new_post_path %>
<% end %>