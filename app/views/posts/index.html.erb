<% @posts.each do |post| %>
  <ol class='post'>
    <li><%= link_to post.title, post_path(post) %></li>
    <li><%= post.content %></li>
    <% if post.author == current_user %>
      <li><%= link_to 'Edit Post', edit_post_path(post), :id => 'button' %></li>
      <li><%= link_to 'Delete Post', post_path(post),
          method: :delete,
          data: {confirm: 'Are you sure you want to delete this post?'}, :id => 'button' %></li>
    <% end %>
  </ol>
<% end %>

<% if logged_in? %>
  <div id='back-to-posts'>
    <%= link_to 'Create a Post', new_post_path %>
  </div>
<% end %>