<% if logged_in? %>
  <div id='show-post'>
    <%= form_for @post do |f| %>
      Title: <%= f.text_field :title %><br /><br />
      Content: <%= f.text_area :content, rows: "10", cols: "30" %><br />
      Studio: <%= f.collection_select :studio_id, Studio.order(:name),:id,:name, include_blank: false %><br/>
      <%= f.submit 'Create Review', :id => 'button' %>
    <% end %>

  </div>
<% else %>
  <h1> You cannot access this page. </h1>
<% end %>