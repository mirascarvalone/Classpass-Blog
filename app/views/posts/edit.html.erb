<% if @post.author == current_user %>

  <div id='show-post'>
    <%= form_for @post, method: :patch do |f| %>
      Title: <%= f.text_field :title, size: "40" %><br />
      Content: <%= f.text_area :content, rows: "10", cols: "60"  %><br />
      <%= f.submit 'Edit Review', :id => 'button'  %>
    <% end %>
  </div>

<% else %>
  <h1> You cannot access this page. </h1>
<% end %>