<div id='show-post'>
  <h1> <%=@post.title %> </h1>
  <h3> Rating: <%=@post.rating%> </h3>
  <h3> Written by: <%=@post.author_username%> on <%=long_form_date(@post.updated_at)%> </h3>
  <h2> <%=@post.content %> </h2>
</div>

<div id='back-to-posts'>
  <%= link_to 'Back to Posts', posts_path %>
</div>